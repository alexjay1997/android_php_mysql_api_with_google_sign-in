<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".View_Layout">


    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="397dp"
        android:layout_height="403dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">


    </ScrollView>

    <TableRow
        android:id="@+id/tableRow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/scrollView3"
        app:layout_constraintEnd_toEndOf="@+id/scrollView3"
        app:layout_constraintStart_toStartOf="@+id/scrollView3"
        app:layout_constraintTop_toTopOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.382">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_user_id_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:text="User id" />

            <TextView
                android:id="@+id/userId_textView"
                android:layout_width="305dp"
                android:textStyle="italic"
                android:layout_height="wrap_content"

                android:layout_marginTop="12dp"

                android:padding="5dp"
                android:text="user id here!"
                android:textAlignment="center"

                android:textSize="20dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView_user_fullname_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Name" />

            <TextView
                android:id="@+id/userfullname_textView"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="12dp"

                android:padding="5dp"
                android:text="user fullname here!"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView_username_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Username" />

            <TextView
                android:id="@+id/user_username_textView"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="12dp"

                android:padding="5dp"
                android:text="username here!"
                android:textAlignment="center"
                android:textSize="20dp" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/textView_password_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="20dp"
                android:text="Password" />
            <TextView
                android:id="@+id/user_password_textView"
                android:layout_width="305dp"
                android:layout_height="wrap_content"
                android:textStyle="italic"
                android:layout_marginTop="12dp"

                android:padding="5dp"
                android:text="user password here!"
                android:textAlignment="center"
                android:textSize="20dp" />

        </LinearLayout>
    </TableRow>

    <Button
        android:id="@+id/button_edit_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:background="#2da2ee"
        android:padding="10dp"
        android:text="Edit"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/button_delete_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3"
        app:layout_constraintVertical_bias="0.564" />

    <Button
        android:id="@+id/button_delete_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="76dp"
        android:background="@color/colorAccent"
        android:padding="10dp"
        android:text="Delete"
        android:onClick="deleteBtn"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/editText_userId_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/button_edit_user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView3" />

</androidx.constraintlayout.widget.ConstraintLayout>